{
  "extends": "stylelint-config-standard",
  "rules": {
    "block-no-empty": [true, {
      "severity": "warning"
    }],
    "selector-class-pattern": null,
    "indentation": [
      2,
      {
        "except": ["block"],
        "message": "Please use 2 spaces for indentation.",
        "severity": "warning"
      }
    ]
  }
}